<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColorLink">@android:color/holo_blue_dark</item>
        <item name="android:actionOverflowButtonStyle">@style/ClassroomOverflowButtonStyle</item>
    </style>

    <style name="ClassroomOverflowButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/menu_overflow</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="FirebaseTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

        <item name="buttonBarStyle">@style/ButtonStyle</item>

        <item name="android:dialogTheme">@style/FirebaseDialogTheme</item>
    </style>

    <style name="FirebaseDialogTheme">
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>
</resources>